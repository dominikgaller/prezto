#
# Executes commands at the start of an interactive session.
#
# Authors:
#   Sorin Ionescu <sorin.ionescu@gmail.com>
# Extension: Dominik Galler

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# compinit autocomplete power
autoload -Uz compinit && compinit

# Plugines etc

# NVM (Node Version Manger) https://github.com/lukechilds/zsh-nvm
export NVM_SYMLINK_CURRENT=true
# Export nvm completion settings for zsh-nvm plugin before sourcing it
export NVM_COMPLETION=true
export NVM_NO_USE=false
export NVM_AUTO_USE=true
# Export custom home for nvm to have it not in my root
export NVM_DIR="$HOME/Tools/.nvm"
source ~/Tools/.zsh-nvm/zsh-nvm.plugin.zsh

# Custom Scripts
# Paths are in .profile
source ~/.profile
source ~/.thx-shell/shell/my-aliases
source ~/.thx-shell/shell/my-aliases-osx
source ~/.my-scripts

#THIS MUST BE AT THE END OF THE FILE FOR SDKMAN TO WORK!!!
export SDKMAN_DIR="$HOME/Tools/sdkman"
[[ -s "$HOME/Tools/sdkman/bin/sdkman-init.sh" ]] && source "$HOME/Tools/sdkman/bin/sdkman-init.sh"
